<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../MainView/MainWindowDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <SolidColorBrush x:Key="WindowButtonBackground" Color="#FF3291C7"/>    
    <Style x:Key="MainWindowStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="#FF3291C7"/>
    </Style>    
    <Style x:Key="MainMenuStyle" TargetType="{x:Type ListBox}" BasedOn="{StaticResource MainMenuBaseStyle}">
        <Setter Property="Background" Value="#FF00576A"/>
    </Style>
    <Style x:Key="MainMenuButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#FF00C7F3"/>
        <Setter Property="BorderBrush" Value="#FF010D36"/>
    </Style>
</ResourceDictionary>