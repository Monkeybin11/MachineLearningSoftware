<Page x:Class="ObjectRecognitionSoftware.ChangeTheme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ObjectRecognitionSoftware"
      xmlns:resx="clr-namespace:ObjectRecognitionSoftware.Properties"
      mc:Ignorable="d" 
      d:DesignWidth="800" d:DesignHeight="600" 
      Title="Change Theme">

    <Viewbox Stretch="Uniform">
        <Canvas Width="800" Height="600">
            <Rectangle Fill="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Black" Height="580" Width="780" Canvas.Left="10" Canvas.Top="10"/>
            <ComboBox x:Name="ThemeComboBox" Canvas.Left="141" Canvas.Top="48" Width="194" SelectionChanged="ThemeComboBox_SelectionChanged"/>
            <TextBlock Canvas.Left="32" TextWrapping="Wrap" Text="Select a theme" Canvas.Top="50" Height="20" FontSize="14"/>
            <Button x:Name="ApplyThemeButton" Content="Apply" Canvas.Left="354" Canvas.Top="50" Width="98" Click="ApplyThemeButton_Click"/>
        </Canvas>
    </Viewbox>

</Page>
