<Window x:Class="ObjectRecognitionSoftware.Views.DialogBoxes.LoadingDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectRecognitionSoftware.Views.DialogBoxes"
        xmlns:resx="clr-namespace:ObjectRecognitionSoftware.Properties"
        mc:Ignorable="d"
        Title="LoadingDialogBox" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="170" 
        Width="230"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="5" Background="White" BorderBrush="BurlyWood" BorderThickness="2">
        <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Static resx:LoadingDialogBoxResource.LoadingMessage}" FontSize="20" TextAlignment="Center"/>
                <TextBlock Text="{x:Static resx:LoadingDialogBoxResource.OperationTimeMessage}" TextAlignment="Center"/>
            </StackPanel>  
    </Border>
</Window>
