        <ResourceDictionary x:Name="CurrentTheme">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/BlackTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>  
    </Application.Resources>
</Application>
