<Page x:Class="ObjectRecognitionSoftware.PeopleDetection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ObjectRecognitionSoftware"
      xmlns:resx="clr-namespace:ObjectRecognitionSoftware.Properties"
      mc:Ignorable="d" 
      d:DesignWidth="800" d:DesignHeight="600" 
      Title="StartPage">

    <Viewbox Stretch="Uniform">
        <Canvas Width="800" Height="600">
            <Rectangle Fill="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Black" Height="580" Width="780" Canvas.Left="10" Canvas.Top="10"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="28" FontStyle="Italic" Text="{x:Static resx:PeopleDetectionResource.Title}" Margin="30"/>
            <Button x:Name="ChooseImageButton1" Content="Choose Image" Canvas.Left="30" Canvas.Top="551" Width="111" Click="ChooseImageButton1_Click"/>
            <TextBlock x:Name="ChooseImageLabel1" Canvas.Left="156" TextWrapping="Wrap" Canvas.Top="551"/>
            <Image x:Name="ChooseImage1" Height="474" Canvas.Left="30" Canvas.Top="72" Width="731"/>
        </Canvas>
    </Viewbox>

</Page>
