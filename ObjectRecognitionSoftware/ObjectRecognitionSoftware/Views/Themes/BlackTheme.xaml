<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="ObjectRecognitionSoftware.Views.Themes.BlackTheme">

    <SolidColorBrush x:Key="WindowButtonBackground" Color="Black"/>

    <Style x:Key="MainWindowStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="Black" />
    </Style>

    <Style x:Key="MainMenuStyle" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="#FF3A3A3A" />
    </Style>
    
    <Style x:Key="MainMenuButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#FF878787" />
    </Style>
    
</ResourceDictionary>