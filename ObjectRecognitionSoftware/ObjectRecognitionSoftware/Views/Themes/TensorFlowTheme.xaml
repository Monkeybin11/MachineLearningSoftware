<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowButtonBackground" Color="#e8621d"/>
    
    <Style x:Key="MainWindowStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="#e8621d" />
    </Style>
    
    <Style x:Key="MainMenuStyle" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="#f68221" />
    </Style>

    <Style x:Key="MainMenuButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#3f525b" />
    </Style>
</ResourceDictionary>