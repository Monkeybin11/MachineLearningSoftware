<UserControl x:Class="ObjectRecognitionSoftware.Views.Controls.MainMenuButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjectRecognitionSoftware.Views.Controls"
             xmlns:buttonicons="clr-namespace:ObjectRecognitionSoftware.Views.Controls.ButtonIcons"
             mc:Ignorable="d">
    
    <Grid Width="130" x:Name="Grid" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" x:Name="TextBlock" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,2,0,2" TextWrapping="Wrap" Text="Text" FontFamily="Calibri"/>
    </Grid>
</UserControl>
